<div class="navbar">

  <div class="navbar-mainmenu">
    <ul class="mainmenu" role="menubar">

      <% for (var item in data.menu) { %>
        <li role="menuitem">

          <% var r = (data.root !== '/' ? `/${data.root}` : '') + `${data.menu[item].route}`; %>
          <a href="<%= r %>" class="<%= (route.split(r).length > 1) ? 'current' : '' %>">
          <%= data.menu[item].text %>
          </a>

        </li>
      <% } %>
    </ul>
  </div>

  <div class="navbar-overlay">
    <div class="title"><%= data.title %></div>

    <ul class="overlay" role="menubar">

      <% if (data.userMenu) { %>
      <li role="menuitem">
        <div class="user-container">
          <div class="usericon-container">
            <img id="usericon" src="<%= data.root !== '/' ? `/${data.root}` : '' %>/usericon.png">
          </div>
          <div class="usermenu">
            <div class="arrow-up"></div>
            <div class="items">
              <% var contents = data.logged ? data.userMenu.loggedIn : data.userMenu.loggedOut; %>
              <% for (var c in contents) { %>
                  <a href="<%= contents[c].route %>">
                    <%= contents[c].text %>
                  </a>
              <% } %>
            </div>
          </div>
        </div>
      </li>
      <% } %>

      <li role="menuitem">

        <div class="navicon-container">
          <img id="navicon" src="<%= data.root !== '/' ? `/${data.root}` : '' %>/navicon.png">
        </div>

      </li>
    </ul>
  </div>

</div>
